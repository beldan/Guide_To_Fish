<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainMenu"
                android:background="@drawable/gradient_background">

    <LinearLayout
        android:id="@+id/button1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/borders"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:id="@+id/button1Image"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/fisherman"
            android:contentDescription="view all catches"/>
        <TextView
            android:id="@+id/button1Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="View All Catches"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/text_color"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/button2"
        android:layout_below="@+id/button1"
        android:orientation="vertical"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/borders"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="8dp">
        <ImageView
            android:id="@+id/button2Image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add"/>
        <TextView
            android:id="@+id/button2Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Add Catch"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/button3"
        android:layout_below="@+id/button1"
        android:layout_toRightOf="@+id/button2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/borders"
        android:clickable="true"
        android:layout_marginTop="8dp"
        android:focusable="true">
        <ImageView
            android:id="@+id/button3Image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/fish"/>
        <TextView
            android:id="@+id/button3Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="My Catches"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/text_color"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/borders"
        android:clickable="true"
        android:layout_marginTop="8dp"
        android:focusable="true">
        <ImageView
            android:id="@+id/button4Image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/weather"/>
        <TextView
            android:id="@+id/button4Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Weather"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/text_color"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/borders"
        android:clickable="true"
        android:layout_marginTop="8dp"
        android:focusable="true">
        <ImageView
            android:id="@+id/button5Image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/friends"/>
        <TextView
            android:id="@+id/button5Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Friends"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/text_color"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/button6"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@id/button4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/borders"
        android:clickable="true"
        android:layout_marginTop="8dp"
        android:focusable="true">
        <ImageView
            android:id="@+id/button6Image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/friends"/>
        <TextView
            android:id="@+id/button6Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brag \nWall"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@color/text_color"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@id/button5" android:orientation="horizontal" android:weightSum="2">
        <LinearLayout
            android:id="@+id/button7"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/borders"
            android:clickable="true"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:focusable="true">
            <ImageView
                android:id="@+id/button7Image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/profile"/>
            <TextView
                android:id="@+id/button7Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Profile"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_color"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button8"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/borders"
            android:clickable="true"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:focusable="true">
            <ImageView
                android:id="@+id/button8Image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/data"/>
            <TextView
                android:id="@+id/button8Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Fish Data"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/text_color"/>
        </LinearLayout>


        </LinearLayout>

</RelativeLayout>
