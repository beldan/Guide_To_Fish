<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="beldan.guidetofish.Settings.User_Create"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/user_create_title"
        android:text="Create User Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/text_color"/>

    <EditText
        android:id="@+id/user_create_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/user_create_title"
        android:layout_marginTop="30dp"
        android:hint="username"
        android:gravity="center"/>

    <EditText
        android:id="@+id/user_create_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/user_create_username"
        android:layout_marginTop="30dp"
        android:hint="email"
        android:gravity="center"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/user_create_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/user_create_email"
        android:layout_marginTop="30dp"
        android:hint="password"
        android:gravity="center"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/user_create_repeat_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/user_create_password"
        android:layout_marginTop="30dp"
        android:hint="repeat password"
        android:gravity="center"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/user_create_createButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_create_repeat_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Create User"
        android:textSize="20sp"
        />
</RelativeLayout>
