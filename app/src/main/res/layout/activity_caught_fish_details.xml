
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="beldan.guidetofish.CaughtFish.CaughtFishDetailsActivity"
    android:background="@drawable/gradient_background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/caught_fish_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Fish Type"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/text_color"/>
        <ImageView
            android:id="@+id/caught_fish_detail_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/fish"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/caught_fish_detail_type"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/caught_fish_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Date"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/caught_fish_detail_image"
            android:textColor="@color/text_color"/>
        <RelativeLayout
            android:id="@+id/caught_fish_weight_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caught_fish_detail_date"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/caught_fish_weight_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/caught_fish_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="some weight in Kg"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/caught_fish_length_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caught_fish_weight_layout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/caught_fish_length_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Length:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/caught_fish_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="some length in cm"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/caught_fish_bait_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caught_fish_length_layout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/caught_fish_bait_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bait Used:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/caught_fish_bait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="some bait"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/caught_fish_latitude_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caught_fish_bait_layout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/caught_fish_latitude_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/caught_fish_latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="some latitude"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/caught_fish_longitude_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caught_fish_latitude_layout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/caught_fish_longitude_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/caught_fish_longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="some longitude"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/caught_fish_waterTemp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caught_fish_longitude_layout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/caught_fish_waterTemp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Temperature:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/caught_fish_waterTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="water Temperature"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/caught_fish_pressure_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caught_fish_waterTemp_layout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/caught_fish_pressure_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/caught_fish_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/caught_fish_pressure_trend"
                android:text="pressure"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/caught_fish_pressure_trend"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="\u2191"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/caught_fish_waveHeight_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caught_fish_pressure_layout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/caught_fish_waveHeight_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wave Height:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/caught_fish_waveHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="wave height"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/caught_fish_swellDirection_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caught_fish_waveHeight_layout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/caught_fish_swellDirection_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swell Direction:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/caught_fish_swellDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="swell direction"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/caught_fish_swellHeight_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caught_fish_swellDirection_layout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/caught_fish_swellHeight_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swell Height:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/caught_fish_swellHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="swell height"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/caught_fish_humidity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caught_fish_swellHeight_layout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/caught_fish_humidity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/caught_fish_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="humidity"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/caught_fish_moon_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caught_fish_humidity_layout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/caught_fish_moon_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moon Phase:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"/>
            <ImageView
                android:id="@+id/caught_fish_moon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/fish"/>
        </RelativeLayout>
        <fragment
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/caught_fish_moon_layout"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/caught_fish_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>

        </RelativeLayout>

</ScrollView>