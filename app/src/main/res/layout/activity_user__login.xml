<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="beldan.guidetofish.Settings.User_Login"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/user_login_title"
        android:text="USER LOGIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/text_color"/>

    <TextView
        android:id="@+id/user_login_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current user"
        android:layout_below="@id/user_login_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/user_login_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_login_current"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="USERNAME"
        android:gravity="center"/>

    <EditText
        android:id="@+id/user_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_login_username"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="PASSWORD"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/user_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_login_password"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/user_login_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="LOGIN"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/user_login_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Create User"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>
        </LinearLayout>



    <Button
        android:id="@+id/user_login_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_login_layout"
        android:layout_centerHorizontal="true"
        android:text="Forgot Password / Username"
        android:layout_marginTop="30dp"/>

</RelativeLayout>
